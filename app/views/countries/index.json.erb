[
<% @countries.each do |country| %>
  { 
    "id": <%= country.id %>,
    "name": "<%= country.name %>",
    "participations": [
    <% country.participations.each do |participation| %>
    {
      "id": <%= participation.id %>,
      "summer": <%= participation.game.summer? %>
      "year": <%= participation.game.year %>
    }<%=',' if participation != country.participations.last %>
    <% end %>
    ]
  }<%=',' if country != @countries.last %>
<% end %>
]